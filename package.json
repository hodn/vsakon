{
  "name": "flexiguard",
  "productName": "FlexiGuard",
  "description": "Visualization app for FlexiGuard system.",
  "version": "1.0.0",
  "author": {
    "name": "Hoang Doan",
    "email": "hoang.doan@rocketmail.com",
    "url": "https://www.albertov.cz"
  },
  "private": true,
  "homepage": "./",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest",
    "electron-packager": "^13.1.1",
    "electron-rebuild": "latest",
    "react": "^16.13.1",
    "react-scripts": "1.0.0"
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.9.12",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.51",
    "@material-ui/pickers": "^3.2.10",
    "csv": "^5.3.2",
    "csv-parser": "^2.3.2",
    "csv-write-stream": "^2.0.0",
    "date-fns": "^2.12.0",
    "electron-reload": "^1.5.0",
    "electron-settings": "^3.2.0",
    "electron-store": "^4.0.0",
    "leaflet": "^1.6.0",
    "lowdb": "^1.0.0",
    "material-table": "^1.57.2",
    "react-dom": "^16.13.1",
    "react-leaflet": "^2.6.3",
    "react-router-dom": "^5.1.2",
    "react-svg-gauge": "^1.0.10",
    "react-vis": "^1.11.7",
    "serialport": "8.0.4",
    "shortid": "^2.2.15",
    "simplify-js": "^1.2.4",
    "typeface-roboto": "0.0.75"
  },
  "main": "src/electron-starter.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "install": "electron-rebuild",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder -l"
  },
  "build": {
    "appId": "cz.albertov.flexiguard",
    "extends": null,
    "npmRebuild": false,
    "asar": false,
    "files": [
      "./build/**/*",
      "./src/electron-starter.js",
      "./src/colors.js",
      "./src/helpers/*.js",
      "./src/markerIcons/*"
    ],
    "linux": {
      "target": "appImage"
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "target": "nsis"
    },
    "mac": {
      "identity": null,
      "target": "pkg"
    }
  },
  "browserslist": [
    ">0.2%",
    "not ie <= 11",
    "not op_mini all"
  ]
}
